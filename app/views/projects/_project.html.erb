<div class="container text-center">

  <%= form_with(model: project, local: true) do |form| %>
    <% if project.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>
        <ul>
        <% project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="container col-6">
      <div class="card text-center">
        <div class="card-header bg-grey text-center font-weight-bold my-font-size">
          <h1><%= project_header %></h1>
        </div>

        <div class="card-body" style="height: 18rem;">
          <p class="card-text text-center">
            <%= form.label :name %>
            <%= form.text_field :name, class:"form-control", placeholder:"Enter Project Name", autofocus: true %>
          </p> <br>
          <p class="card-text text-center">
            <%= form.label :description %>
              <%= form.text_area :description, rows:"4", class:"form-control", placeholder:"Enter Project Description" %>
          </p>
        </div>

        <div class="card-footer">
          <p>
            <%= form.submit "#{name}", class: "btn mt-3 col-3",
              style:"background-color: #70adb5;" %>
          </p>
        </div>
      </div>
    </div>

  <% end %>
  <%= link_to 'Back', projects_path, class:"btn mt-3 col-1",
        style:"background-color: #70adb5;" %>
</div>
