<div class="row">
  <div class="col">
    <h2>Showing Project Details</h2>

    <p><strong>Name: </strong><%= @project.name %></p>
    <p><strong>Description: </strong><%= @project.description %></p>
    <%= link_to 'Home', projects_path %> |
    <%= link_to 'Edit', edit_project_path(@project)%> |
    <%= link_to 'Delete', project_path(@project), method: :delete,
        data: { confirm: "Are you sure?" }%>
  </div>
  <div class="col">
    <div class="input-group">
      <%= text_field_tag :email, '', { class: 'form-control', placeholder: "Enter the email address of the person you want to invite"} %>
      <span class="input-group-append">
        <button type="submit" class="btn btn-flat" style="background-color: #70adb5;">
          Invite
        </button>
      </span>
    </div> <br>

    <table class="table">
      <h2>Members List</h2>
      <thead style="background-color: #70adb5;">
        <tr>
          <th scope="col">Members</th>
          <th scope="col">Role</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody class="text-left">
        <tr>
          <td><%= link_to @project.user.username, profile_path(@project.user) %></td>
          <td>Leader</td>
          <td><a href="#">Remove</a></td>
        </tr>
        <tr>
          <td><%= link_to 'Jacob', @project %></td>
          <td>Developer</td>
          <td><a href="#">Remove</a></td>
        </tr>
        <tr>
          <td><%= link_to 'Larry', @project %></td>
          <td>Tester</td>
          <td><a href="#">Remove</a></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<table class="table">
  <h2>Issues List</h2>
  <thead style="background-color: #70adb5;">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Issues</th>
      <th scope="col">Type</th>
      <th scope="col">Assigned Person</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>1</td>
      <td>Make sorting feature</td>
      <td>Feature</td>
      <td><%= link_to @project.user.username, profile_path(@project.user) %></td>
      <td><a href="#">View Detail</a></td>
    </tr>
    <tr>
      <td>2</td>
      <td>Dropdown menu not working</td>
      <td>Bug</td>
      <td><%= link_to @project.user.username, profile_path(@project.user) %></td>
      <td><a href="#">View Detail</a></td>
    </tr>
    <tr>
      <td>3</td>
      <td>Need to fix mysql setting</td>
      <td>Error</td>
      <td><%= link_to @project.user.username, profile_path(@project.user) %></td>
      <td><a href="#">View Detail</a></td>
    </tr>
  </tbody>
</table>

<div class="text-center" >
  <%= link_to 'Add New Issue', new_project_path, class:"btn my-3", style:"background-color: #70adb5;" %>
</div>
